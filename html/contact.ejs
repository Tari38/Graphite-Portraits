<!DOCTYPE html>
<html lang="en">
    <% include ./include/head %>
    <body>
        <% include ./include/nav %>

        <div class="contact1">
          <div class="container-contact1">
			      <div class="contact-pic">
				      <img src="images/send-mail.png" alt="IMG">
			      </div>

            <form action="contact/send" method="post" class="col-12 col-md-8 contactForm validate-form" enctype="multipart/form-data">
                  <span class="contact1-form-title">Contact Me</span>

                    <div class="wrap-form-group validate-input" data-validate="Name is required">
                        <input type="text" class="input-control" id="name" placeholder="name">
                        <span class="shadow-input"></span>
                    </div>
                    <div class="wrap-form-group validate-input" data-validate="Valid email is required: example@abc.def">
                        <input type="email" class="input-control" id="email" placeholder="email">
                        <span class="shadow-input"></span>
                    </div>
                    <div class="wrap-form-group validate-input" data-validate="Message is required">
                        <textarea class="input-control" id="enquiry" placeholder="enquiry" rows="6"></textarea>
                        <span class="shadow-input"></span>
                    </div>
                    <div class="wrap-form-group validate-input" data-validate="Image File is required">
                      <input type="file" id="files" name="files">
                    </div>
                    <div class="container-btn-form float-right"> <!-- align button to the right -->
                        <button type="submit" class="btn btn-primary btn-lg btn-form" id="submit">Submit</button><input type="reset">
                    </div>
                </form>
          </div>
          <div class="row">
                <p></p>
          </div>
        </div>
        <% include ./include/scripts %>
        <% include ./include/footer %>
    </body>
  </html>
